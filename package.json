{
  "name": "seo-assistant",
  "version": "0.1.0",
  "description": "Aplicación Web Local Portable para Auditoría y Optimización SEO",
  "main": "main.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "electron": "electron .",
    "electron:dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win portable",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "vercel-build": "echo 'Building for Vercel...'",
    "deploy": "vercel --prod"
  },
  "keywords": [
    "seo",
    "audit",
    "optimization",
    "keyword-research",
    "analytics",
    "portable",
    "electron"
  ],
  "author": "Sol1973",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "puppeteer": "^21.5.2",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "build": {
    "appId": "com.seoassistant.app",
    "productName": "SEO Assistant",
    "directories": {
      "output": "dist"
    },
    "files": [
      "backend/**/*",
      "frontend/**/*",
      "main.js",
      "package.json",
      "config/**/*",
      "!node_modules/**/*",
      "node_modules/express/**/*",
      "node_modules/sqlite3/**/*",
      "node_modules/puppeteer/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "frontend/assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "frontend/assets/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": "AppImage",
      "icon": "frontend/assets/icon.png",
      "category": "Development"
    }
  }
}
